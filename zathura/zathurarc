set window-title-basename "true"
set selection-clipboard "clipboard"

# Dracula color theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers

#
# Dracula color theme
#

set notification-error-bg       "#ff5555" # Red
set notification-error-fg       "#ADADAD" # Foreground
set notification-warning-bg     "#ffb86c" # Orange
set notification-warning-fg     "#44475a" # Selection
set notification-bg             "#1f1f1f" # Background
set notification-fg             "#ADADAD" # Foreground

set completion-bg               "#1f1f1f" # Background
set completion-fg               "#6272a4" # Comment
set completion-group-bg         "#1f1f1f" # Background
set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#ADADAD" # Foreground

set index-bg                    "#1f1f1f" # Background
set index-fg                    "#ADADAD" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#ADADAD" # Foreground

set inputbar-bg                 "#1f1f1f" # Background
set inputbar-fg                 "#ADADAD" # Foreground
set statusbar-bg                "#1f1f1f" # Background
set statusbar-fg                "#ADADAD" # Foreground

set highlight-color             "#ffb86c" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#1f1f1f" # Background
set default-fg                  "#ADADAD" # Foreground

set render-loading              true
set render-loading-fg           "#1f1f1f" # Background
set render-loading-bg           "#ADADAD" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#1f1f1f" # Background
set recolor-darkcolor           "#ADADAD" # Foreground

#
# Startup options
#
set adjust-open width
set recolor true
